{
  "ts-node": { "esm": true },
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "baseUrl": "./src",
    "paths": {
      "utils/*": ["./src/utils/*"]
    }
  }
}
